{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ESNext",
            "dom"
        ],
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src",
        "types",
    ],
    "exclude": [
        "/node_modules/",
        "./src/**/*.spec.ts"
    ],
}